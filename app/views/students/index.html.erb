<% if logged_in? %>
  <nav class="nav-bar">
    <%= form_tag import_students_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import" %>
    <% end %>
  </nav>
<% end %>

<h1>Teams homepage, should list all students and nav </h1>
<div id="main-table-background">
  <div id="main-table-content">
    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>

    <% if @draft_error %>
      <h1> <%= @draft_error %></h1>
    <% end %>



<p>*<em>Note:</em> Importing duplicate students will not save to the database a second time.</p>
  <table>
    <th>Student ID</th><th>First Name</th><th>Last Name</th><th>Gender</th><th>GPA</th><th>GRADE</th>

    <tr>
      <% @students.each do |student| %>
        <td><%= student.student_id %> </td>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.gender %></td>
        <td><%= student.gpa %></td>
        <td><%= student.grade_level %></td>
        <% if student.teacher_id != nil %>
        <td><em>Has already been drafted by:</em><%= link_to student.teacher.name, teacher_path(student.teacher) %></td>
          <% end %>
          <% if logged_in? && student.teacher_id == nil && student.on_finalized_team == false %>
            <%= form_for :student, url: student_path(student), method: :put do |f| %>
          <td ><%= f.submit "Draft" %></td>
            <% end %>
            <% end %>
        </tr>
      <% end %>
    </table>
  </div>
</div>

  <div id="sidebar">
    <%= render "students/current_team" %>
  </div>
